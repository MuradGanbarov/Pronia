@model List<Product>

@foreach (Product product in Model)
{
    <div class="col-xl-3 col-md-4 col-sm-6">
        <div class="card" style="width: 20rem;">
            <img class="primary-img"
                 src="~/assets/images/product/@product.productImages.FirstOrDefault(pi=>pi.IsPrimary==true).URL"
                 alt="Product Images" />
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <a asp-action="Index" asp-controller="category" class="btn btn-primary">Go Back</a>
            </div>
        </div>
    </div>
}



