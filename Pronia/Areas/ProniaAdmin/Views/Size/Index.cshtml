@model List<Size>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Size Table</h4>
                <a asp-controller="size" asp-action="create" class="btn btn-success">Create New Size</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>

                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Size size in Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @size.Name
                                    </td>
                                    <td>
                                        @size.ProductSizes.Count
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-controller="size" asp-route-id="@size.Id" class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-controller="size" asp-route-id="@size.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="details" asp-controller="size" asp-route-id="@size.Id" class="btn btn-success btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                    <td>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
