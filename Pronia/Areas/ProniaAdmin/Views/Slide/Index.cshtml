@model List<Slide>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slide Table</h4>
                <a asp-controller="slide" asp-action="create" class="btn btn-success">Create Tags</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title
                                </th>
                                <th>
                                    Order
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slide slide in Model)
                            {
                                count++;
                                <tr>

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/images/slider/@slide.ImageURL" />
                                    </td>
                                    <td>
                                        @slide.SubTitle
                                    </td>
                                    <td>
                                        @slide.Order
                                    </td>
                                    <td>
                                        <a class="btn btn-warning btn-info"><i class="mdi mdi-pencil"></i></a>
                                        <a class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-success btn-info"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                    <td>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
