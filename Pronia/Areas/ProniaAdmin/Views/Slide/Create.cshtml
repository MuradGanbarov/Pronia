@model Slide
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Slide</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="ImageURL">Image</label>
                        <input asp-for="ImageURL" class="form-control" placeholder="ImageURL">
                        <span class="text-danger" asp-validation-for="ImageURL"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order">Order</label>
                        <input asp-for="Order" class="form-control" placeholder="Order">
                        <span class="text-danger" asp-validation-for="Order"></span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
